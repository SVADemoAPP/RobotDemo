<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/popup_bg"
        android:gravity="center"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userId管理"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_centerInParent="true"/>

        </RelativeLayout>
        <View
            android:layout_width="190dp"
            android:layout_height="0.2dp"
            android:background="@color/blue_colon"/>
        <ScrollView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@mipmap/scrollview_barpic"
            android:layout_weight="3">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.chinasoft.robotdemo.view.MyListView

        android:id="@+id/lv_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.chinasoft.robotdemo.view.MyListView>
    <LinearLayout
        android:id="@+id/ll_addshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="添加一个userId"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:textColor="@color/userid_add"
                    android:drawableLeft="@mipmap/userid_add"
                    android:drawablePadding="2dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_add"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_userid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:hint="输入userId"
                    android:paddingLeft="30dp"
                    android:textSize="14dp"
                    android:digits="0123456789."
                    android:inputType="number"
                    android:background="@null"
                    android:textColorHint="@color/gray_bg"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_yes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/userid_yes"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_no"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/userid_no"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>



        </ScrollView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/popup_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="确定"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/popup_tv"/>
            <TextView
                android:id="@+id/popup_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:text="取消"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/popup_tv"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
