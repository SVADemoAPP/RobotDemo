<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kongqw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg1">

    <net.yoojia.imagemap.ImageMap1
        android:id="@+id/imagemap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/home_bg2" />

    <!--显示连接状态-->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/home_unconnect"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="未连接"
        android:textColor="@color/route_color"
        android:textSize="12dp"
        android:textStyle="bold" />

    <!--返回按钮-->
    <TextView
        android:id="@+id/tv_home_back"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:background="@drawable/maplist_next_press"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="28dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="250dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/home_setting"
        android:gravity="center"
        android:paddingRight="3dp"
        android:text="P\nP\nR\nU"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_forcestop"
        android:layout_width="28dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/home_connect"
        android:ems="1"
        android:gravity="center"
        android:paddingRight="3dp"
        android:text="强停"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_change_auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/home_rockerView"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/home_robot_auto" />

        <LinearLayout
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="18dp">

            <com.kongqw.rockerlibrary.view.RockerView
                android:id="@+id/home_rockerView"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:visibility="gone"
                kongqw:areaBackground="@mipmap/default_area_bg"
                kongqw:rockerBackground="@mipmap/default_rocker_bg"
                kongqw:rockerRadius="24dp" />

            <ImageView
                android:id="@+id/iv_operation"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"

                android:gravity="center"
                android:src="@mipmap/home_start" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/home_start" />
</RelativeLayout>

