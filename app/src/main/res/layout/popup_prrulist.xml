<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/popup_bg"
        android:gravity="center"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">
    <TextView
        android:id="@+id/popup_prrulist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="请选择pRRU"
        android:textColorHint="@color/gray_bg"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_centerInParent="true"/>

        </RelativeLayout>
        <View
            android:layout_width="190dp"
            android:layout_height="0.2dp"
            android:background="@color/blue_colon"/>
        <ScrollView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@mipmap/scrollview_barpic"
            android:layout_weight="7">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.chinasoft.robotdemo.view.MyListView

        android:id="@+id/lv_prrulist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.chinasoft.robotdemo.view.MyListView>
</LinearLayout>



        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>

    </LinearLayout>
</RelativeLayout>
