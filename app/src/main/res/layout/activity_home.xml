<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg1">

    <net.yoojia.imagemap.ImageMap1
        android:id="@+id/imagemap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/home_bg2" />


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:drawableLeft="@mipmap/home_unconnect"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="未连接"
        android:textColor="@color/route_color"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="28dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/home_setting"
        android:ems="1"
        android:gravity="center"
        android:paddingRight="3dp"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_connect"
        android:layout_width="28dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/home_connect"
        android:ems="1"
        android:gravity="center"
        android:paddingRight="3dp"
        android:text="连接"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="18dp"
        android:src="@mipmap/home_start" />
</RelativeLayout>

